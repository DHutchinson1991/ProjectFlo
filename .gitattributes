# Set default behavior, in case people don't have core.autocrlf set.
* text=auto

# Declare files that will always have LF line endings in the repo.
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.sh text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf